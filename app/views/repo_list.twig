{% extends 'index_layout.twig' %}
{% block content %}
    <div class="row">
        <div class="col col-md-8 col-md-offset-2">
            <div class="pull-right margin-bottom-10">
                Last updated at {{ reposUpdatedAt|date('d/m/Y H:i:s') }}
                <a href="/repos/sync" class="btn btn-default btn-sm btn-success">
                    <span class="glyphicon glyphicon-repeat" aria-hidden="true"></span> Sync
                </a>
            </div>

            <table class="table table-striped table-hover">
                {% for repo in repos %}
                <tr>
                    <td>{{ repo.full_name }}</td>
                    <td class="text-right">
                        <input type="checkbox" class="repos">
                    </td>
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function() {
            $(".repos").bootstrapSwitch({
                size: 'mini'
            });
        });
    </script>
{% endblock %}